  <%- include('_header') %>

  <style>
    /* Estilos para centrar el contenido */
    .container {
      max-width:800px; /* Ancho máximo del contenido */
      margin:0 auto; /* Centra el contenido horizontalmente */
      padding: 20px; /* Añade un espacio alrededor del contenido */
      text-align: center; /* Centra el texto dentro del contenedor */
      background-color: #fff5e6; /* Color de fondo suave */
      border: 2px solid #d7a96b; /* Borde acorde al tema */
      border-radius: 10px; /* Bordes redondeados */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    /* Estilos para la lista de productos */
    ul {
      list-style: none; /* Elimina los estilos de la lista */
      padding: 0;
    }

    li {
      margin-bottom: 20px; /* Añade espacio entre los elementos de la lista */
    }

    /* Estilos para los encabezados */
    h1, h2, h3 {
      color: #3e2723; /* Color de texto oscuro */
      font-family: 'Georgia', serif; /* Fuente más cálida y acogedora */
    }

    /* Estilos para los párrafos */
    p {
      color: #3e2723; /* Color de texto oscuro */
      font-family: 'Georgia', serif; /* Fuente más cálida y acogedora */
    }

    /* Estilos para las imágenes */
    img {
      max-width: 100%; /* Ajusta el tamaño máximo de las imágenes */
      height: auto; /* Mantiene la relación de aspecto de las imágenes */
      margin-bottom: 10px; /* Añade espacio debajo de las imágenes */
    }
  </style>

  <div class="container">
    <title><%= title %></title>
    
    <h1><%= title %></h1>
    <img src="/img/logo.jpg" alt="Logo">
    
    <p><%= contenido %></p>
    
    <h2>Nuestros productos</h2>
    <ul>
      <% productos.forEach(function(producto) { %>
        <li>
          <h3><%= producto.nombre %></h3>
          <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
          <p><%= producto.descripcion %></p>
          <p><strong>Precio:</strong> <%= producto.precio %></p>
        </li>
      <% }); %>
    </ul>
  </div>

  <%- include('_footer') %>
  </body>
  </html>
